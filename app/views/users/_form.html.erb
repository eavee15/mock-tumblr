<fieldset class="new_user_form">
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br /><br />

  <%= f.label :email %>
  <%= f.email_field :email %><br /><br />
  
  <%= f.label :password %>
  <%= f.password_field :password %><br /><br />

  <div class="submit"><%= f.submit %></div>
<% end %>

</fieldset>