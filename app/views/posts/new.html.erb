<div id="left-content">
	<div id="logo-header">
    	<h1 id="logo-link"><a href="/">logo will go here</a></h1>
  	</div>
	<div id="new-post">
		<h2 class="posts-header">New Post</h2>
		<%= form_for @post do |f| %>
			<%= f.text_field :title, placeholder: "title" %>
			<%= f.text_area :body, placeholder: "tell us your thoughts!" %>
			<%= f.submit "create post" %>
		<% end %>
	</div>
</div>

<!-- <div id="clear"></div> useful later on-->

<div id="right-content">
	<div id="logout">
		<%= link_to(("logout"), "/sessions/destroy", {method: :delete,} %> <!-- class: "logout-button"  might use later-->
	</div>
	<div id="sidebar">
		<nav>
			<ul class="sidebar-list">
				<li><a href="/">home</a></li>
				<li><a href=<%= "/users/#{ @current_user.id }" %>>your posts</a></li>
				<li><a href="/posts/new">new post</a></li>
			</ul>
		</nav>
	</div>
</div>
