<div id="left-content">
  <div id="edit-post">
    <h1>Edit Post</h1>
    <%= form_for @post do |f| %>
      <%= f.text_field :title, placeholder: "edit title" %>
      <%= f.text_area :body, placeholder: "edit your thoughts" %>
      <%= f.submit "save your changes" %>
    <% end %>
  </div>
</div>

<!-- <div id="clear"></div> useful later on-->

<div id="right-content">
  <div id="logout">
    <%= link_to(("logout"), "/sessions/destroy", {method: :delete} %> <!-- class: "logout-button"  might use later-->
  </div>
  <div id="sidebar">
    <nav>
      <ul class="sidebar-list">
        <li><a href="/">home</a></li>
        <li><a href=<%= "/users/#{ @current_user.id }" %>>your posts</a></li>
        <li><a href="/posts/new">new post</a></li>
      </ul>
    </nav>
  </div>
</div>
